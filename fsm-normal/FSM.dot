digraph G {

  graph [
    forcelabels=true;
    bgcolor = white,
    fontsize = 20,
    style = "filled",
    rankdir = LR,
    overlap = false;
    splines = true,
    ranksep = 0.7,
    nodesep = 0.35,
  ];
  
  node [
    style = "solid,bold,filled",
    fontsize = 20,
    shape=circle,
    fontname = "Arial",
    color = "#2f528f",
    fillcolor=white,
  ];
  
  edge [
    style = "solid,bold",
    fontsize = 14,
    fontcolor = black,
    fontname = "Arial",
    color = "#c3cbcf",
    labelfloat = false,
    labeldistance = 0.5,
    labelangle = 90
    arrowhead = normal
  ];
  

  # NODES

  o [style=solid,color=black,fillcolor=black,shape=point];

  P;

  Q;

  R[shape = doublecircle,fillcolor="#a9d18e"];

  S;

  # TRANSITIONS

  o -> S;

  S -> Q [label = b];

  P -> Q [label = b];

  Q -> P [label = a];

  P -> P [label = a];

  {rank=same

  Q -> R [label = b];

  Q -> R [color="#a9d18e",label = c];

  }

}
